<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Состояние нажатия -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/red_600" /> <!-- Темно-красный при нажатии -->
            <corners android:radius="12dp" /> <!-- Закругленные углы -->
        </shape>
    </item>

    <!-- Состояние фокуса -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/red_600" /> <!-- Темно-красный при фокусе -->
            <corners android:radius="12dp" /> <!-- Закругленные углы -->
        </shape>
    </item>

    <!-- Обычное состояние -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/error_color" /> <!-- Красный в обычном состоянии -->
            <corners android:radius="12dp" /> <!-- Закругленные углы -->
        </shape>
    </item>
</selector>
