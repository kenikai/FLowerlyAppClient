<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стиль для нижней навигации -->
    <style name="BottomNavText" parent="TextAppearance.AppCompat.Small">
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">-5dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/merriweather_black</item>
    </style>

    <!-- Унифицированные стили текста -->
    <style name="AppTextTitle">
        <item name="android:fontFamily">@font/merriweather_black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextSubtitle">
        <item name="android:fontFamily">@font/merriweather_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="AppTextBody">
        <item name="android:fontFamily">@font/merriweather_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="AppTextBodyBold">
        <item name="android:fontFamily">@font/merriweather_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <!-- Унифицированные стили кнопок -->
    <style name="AppButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/merriweather_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <style name="AppButtonSecondary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_outline</item>
        <item name="android:textColor">@color/green_400</item>
        <item name="android:fontFamily">@font/merriweather_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>
</resources>