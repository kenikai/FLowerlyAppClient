<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:elevation="0dp"
    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/home_flower_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/rose101"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/home_flower_name"
            android:layout_width="185dp"
            android:layout_height="20dp"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/merriweather_regular"
            android:text="FlowerName"
            app:layout_constraintBottom_toBottomOf="@+id/cardView"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintTop_toTopOf="@+id/cardView" />

        <TextView
            android:id="@+id/home_flower_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/merriweather_regular"
            android:text="800 RUB"
            android:textColor="@color/green_400"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardView" />

        <android.widget.Button
            android:id="@+id/home_flower_btn"
            android:layout_width="108dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_button"
            android:text="В корзину"
            android:textAllCaps="false"
            android:textColor="@color/white"

            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/home_flower_name"
            app:layout_constraintEnd_toEndOf="@+id/home_flower_price"
            app:layout_constraintHorizontal_bias="0.628"
            app:layout_constraintStart_toStartOf="@+id/home_flower_price"
            app:layout_constraintTop_toBottomOf="@+id/home_flower_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>