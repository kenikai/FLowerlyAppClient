<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Иконка приложения -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop" />

    <!-- Название приложения -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="FlowerlyApp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="?android:textColorPrimary"
        android:layout_marginBottom="8dp" />

    <!-- Версия -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Версия 1.0.0"
        android:textSize="16sp"
        android:textColor="?android:textColorSecondary"
        android:layout_marginBottom="16dp" />

    <!-- Описание -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Приложение для заказа цветов онлайн. Выбирайте из широкого ассортимента цветов, добавляйте в избранное и оформляйте заказы с удобной доставкой."
        android:textSize="14sp"
        android:textColor="?android:textColorPrimary"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="16dp" />

    <!-- Информация о разработчике -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Данное приложение было разработано в рамках курсовой работы ученика РТУ МИРЭА Ле Т.Д. ИКБО-28-22"
        android:textSize="12sp"
        android:textColor="?android:textColorSecondary"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:layout_marginBottom="8dp" />

    <!-- Копирайт -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="© 2025 FlowerlyApp"
        android:textSize="12sp"
        android:textColor="?android:textColorSecondary" />

</LinearLayout>
